<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/imageback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"/>
    <TextView
        android:id="@+id/iknip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="_iknip"
        android:layout_marginStart="30dp"/>
    <ImageView
        android:id="@+id/imagebell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bell"
        android:layout_marginStart="300dp"/>

    <ImageView
        android:id="@+id/imagetitik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_titik_tiga"
        android:layout_marginTop="10dp"
        android:layout_marginStart="370dp"/>

    <ImageView
        android:id="@+id/imagepp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/iknip"
        android:src="@drawable/pp"/>

    <TextView
        android:id="@+id/jmlposting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6956"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_below="@id/iknip"
        android:layout_marginStart="140dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/postingan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postingan"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_below="@id/jmlposting"
        android:layout_marginStart="120dp" />

    <TextView
        android:id="@+id/jmlpengikut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27.7jt"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_below="@id/iknip"
        android:layout_marginStart="220dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/pengikut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pengikut"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_below="@id/jmlpengikut"
        android:layout_marginStart="210dp" />

    <TextView
        android:id="@+id/jmlmengikuti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="219"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_below="@id/iknip"
        android:layout_marginStart="320dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/mengikuti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mengikuti"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_below="@id/jmlmengikuti"
        android:layout_marginStart="297dp" />

    <TextView
        android:id="@+id/ikhwan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:text="Ikhwan Hanipp"
        android:layout_below="@id/imagepp"/>

    <TextView
        android:id="@+id/programmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Programmer"
        android:layout_below="@id/ikhwan"/>

    <TextView
        android:id="@+id/youmight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="“You might not think that programmers are  artists, but programming is an extremely creative profession. It’s  logic-based creativity.” – John Romero  💻"
        android:layout_below="@id/programmer"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/edtprofil"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:text="Edit profil"
        android:background="@drawable/button_shape"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_below="@id/youmight"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bagikan"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:text="Bagikan profil"
        android:background="@drawable/button_shape"
        android:layout_marginTop="20dp"
        android:layout_marginStart="200dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_below="@id/youmight"/>

    <ImageView
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_feed"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/edtprofil"/>

    <ImageView
        android:id="@+id/reels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_reels"
        android:layout_marginTop="25dp"
        android:layout_marginStart="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edtprofil"/>

    <ImageView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tag"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/edtprofil"/>

    <ImageButton
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home"
        android:backgroundTint="@color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"/>
    <ImageButton
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search"
        android:backgroundTint="@color/white"
        android:layout_marginStart="80dp"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:id="@+id/btnupload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_upload"
        android:backgroundTint="@color/white"
        android:layout_marginStart="200dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:id="@+id/btnreels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_reels"
        android:backgroundTint="@color/white"
        android:layout_marginStart="250dp"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:id="@+id/btnprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile_active"
        android:backgroundTint="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>




</RelativeLayout>